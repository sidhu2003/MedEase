services:
  pgdb:
    image: postgres:16
    container_name: pgdb
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: admin
      POSTGRES_DB: pgdb
    ports:
      - "5432:5432"
    volumes:
      - db_data:/var/lib/postgresql/data

  django-app:
    image: django-app
    container_name: django-app
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    volumes:
      - web_data:/app
    depends_on:
      - pgdb

volumes:
  web_data:
  db_data: